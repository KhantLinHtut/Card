<?xml version="1.0" encoding="utf-8"?>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"

        >


    <ImageView
    android:id="@+id/flower"
    android:layout_width="match_parent"
    android:layout_height="370dp"
    android:scaleType="centerCrop"
    android:src="@drawable/flower"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"

    />
    <TextView
    android:id="@+id/text1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@+id/flower"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:text="MY LOVE,\nYOU LIKE A FLOWER"
    android:textColor="#3F51B5"
    android:layout_margin="20dp"
    android:textSize="20sp"

    />
    <ImageView
        android:id="@+id/star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/ic_star_black_24dp"
        android:layout_margin="20dp"
        />
    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text1"
        app:layout_constraintLeft_toRightOf="@id/star"
        android:text="Editor's Choice"
        android:textColor="#E91E63"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/text3"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/star"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="We're all a little weird. And life is a little weird. And when we find someone whose weirdness is compatible with ours, we join up with them and fall into mutually satisfying weirdness and call it love-true love.\n\nAnd in this crazy life and through these"
        android:textColor="#3F51B5"
        android:layout_margin="20dp"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text3"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="$99.9"
        android:textSize="30sp"
        android:textColor="#3F51B5"
        android:layout_margin="30dp"
        />
    <Button
        android:id="@+id/btn_order"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text3"
        app:layout_constraintLeft_toRightOf="@id/price"
        android:text="ORDER NOW"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="140dp"
        android:background="@drawable/round"
        />

</androidx.constraintlayout.widget.ConstraintLayout>